<idea-plugin>
    <id>com.example.envmanager</id>
    <name>Environment Variables Manager</name>
    <version>1.0.0</version>
    <vendor email="support@example.com" url="http://www.example.com">Example</vendor>

    <description><![CDATA[
    A powerful environment variables management plugin for IntelliJ IDEA.
    Features:
    - Create, edit, and delete environment variables
    - Import environment variables from .env files
    - Group management with activation/deactivation
    - Beautiful and intuitive UI
    ]]></description>

    <idea-version since-build="203"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- TODO: 图标-->
        <!--        <toolWindow id="Environment Variables" secondary="true" icon="/icons/env_icon.png"-->
        <!--                    anchor="right" factoryClass="com.example.envmanager.ui.EnvManagerToolWindowFactory"/>-->
        <toolWindow id="Environment Variables" secondary="true"
                    anchor="right"
                    factoryClass="com.github.linpeilie.switchenvironments.ui.EnvManagerToolWindowFactory"/>

        <applicationService serviceImplementation="com.github.linpeilie.switchenvironments.service.EnvVariableService"/>
        <applicationService serviceImplementation="com.github.linpeilie.switchenvironments.service.EnvGroupService"/>

        <runConfigurationExtension implementation="com.github.linpeilie.switchenvironments.EnvironmentInjector"/>
    </extensions>

    <actions>
        <group id="EnvManagerGroup" text="Environment Variables" description="Environment Variables Management">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="com.github.linpeilie.switchenvironments.action.OpenEnvManagerAction"
                    class="com.github.linpeilie.switchenvironments.action.OpenEnvManagerAction"
                    text="Open Environment Manager"
                    description="Open Environment Variables Manager"/>
        </group>
    </actions>
</idea-plugin>